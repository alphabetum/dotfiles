#!/usr/bin/env bash
###############################################################################
# pip-packages
#
# Install script for pip-install Python 2 packages.
#
# http://www.pip-installer.org/
# https://pip.pypa.io
###############################################################################

###############################################################################
# Update
###############################################################################
pip install --upgrade setuptools
pip install --upgrade pip

###############################################################################
# Packages
###############################################################################

# 1pass
#
# A command line interface for 1Password
#
# https://pypi.python.org/pypi/1pass
# https://github.com/georgebrock/1pass
pip install --upgrade 1pass

# IPython
#
# A rich architecture for interactive computing.
#
# http://ipython.org/
pip install --upgrade "ipython[all]"

# mitmproxy
#
# An interactive console program that allows traffic flows to be intercepted,
# inspected, modified and replayed.
#
# http://mitmproxy.org/
pip install --upgrade mitmproxy

# pep8 - Python style guide checker
#
# pep8 is a tool to check your Python code against some of the style
# conventions in PEP 8.
#
# https://github.com/jcrocholl/pep8
pip install --upgrade pep8

# pgcli
#
# Postgres CLI with autocompletion and syntax highlighting
#
# https://github.com/amjith/pgcli
pip install --upgrade pgcli

# pre-commit
#
# A framework for managing and maintaining multi-language pre-commit hooks.
#
# http://pre-commit.com/
# https://github.com/pre-commit/pre-commit
pip install --upgrade pre-commit

# pythonpy
#
# python -c, with shorthand and tab completion
#
# https://github.com/Russell91/pythonpy
# https://github.com/Russell91/pythonpy/wiki/Python3
pip3 install -I --upgrade pythonpy
