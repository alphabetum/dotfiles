#!/usr/bin/env bash
###############################################################################
# hosts
#
# A wrapper for the hosts program that includes some additional functions.
###############################################################################

block() {
  $_ME add 127.0.0.1 "${1}"
}

unblock() {
  $_ME remove "${1}"
}

# Source the original hosts program.
. "${HOME}/.dotfiles/vendor/com/github/alphabetum/hosts/hosts"
