#!/usr/bin/env bash
#########################################################################
# syncing - a bask extension script
#
# Add this script and %s to your \$PATH. For usage information, run:
# syncing help
#########################################################################

source "$(which bask)"

desc address <<HEREDOC
Usage:
  $_ME address

Description:
  Print the URL.
HEREDOC
address() {
  local _address
  local _config_file="${HOME}/Library/Application Support/Syncthing/config.xml"

  if [[ ! -e "${_config_file}" ]]
  then
    printf "Configuration file not found.\n"
    exit 1
  fi

  xmllint \
    --xpath "//configuration/gui/address/text()" \
    "${HOME}/Library/Application Support/Syncthing/config.xml"

  printf "\n"
}

desc browser <<HEREDOC
Usage:
  $_ME browser

Description:
  Open the syncthing GUI in the browser. This is an alias for \`$_ME gui\`.
HEREDOC
browser() {
  $_ME gui
}

desc gui <<HEREDOC
Usage:
  $_ME gui

Description:
  Open the syncthing GUI in the browser.
HEREDOC
gui() {
  local _address
  _address="$($_ME address)"

  if [[ -z "${_address}" ]]
  then
    printf "Address not found.\n"
    exit 1
  fi

  open "https://${_address}"
}

desc start <<HEREDOC
Usage:
  $_ME start

Description:
  Start syncthing.
HEREDOC
start() {
  brew services start syncthing
}

desc status <<HEREDOC
Usage:
  $_ME status

Description:
  Get the status.
HEREDOC
status() {
  local _api_key
  local _config_file="${HOME}/Library/Application Support/Syncthing/config.xml"

  if [[ ! -e "${_config_file}" ]]
  then
    printf "Configuration file not found.\n"
    exit 1
  fi

  _api_key="$(
    xmllint \
      --xpath "//configuration/gui/apikey/text()" \
      "${_config_file}"
  )"

  if [[ -z "${_api_key}" ]]
  then
    printf "API Key not found.\n"
    exit 1
  fi

  curl -s -H "X-API-KEY: ${_api_key}" http://localhost:8384/rest/stats/folder | jq

  curl \
    -s \
    -H "X-API-KEY: ${_api_key}" \
    http://localhost:8384/rest/db/completion | jq

  curl \
    -s \
    -H "X-API-KEY: ${_api_key}" \
    http://localhost:8384/rest/db/status | jq
}

desc stop <<HEREDOC
Usage:
  $_ME stop

Description:
  Stop syncthing.
HEREDOC
stop() {
  brew services stop syncthing
}

_main
