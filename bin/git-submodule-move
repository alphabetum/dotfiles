#!/usr/bin/env sh
#
# Small wrapper for git-submodule-move

# Use greadlink instead of BSD readlink, since this script uses `readlink -m`,
# which doesn't exist in BSD readlink.
readlink() {
  if hash greadlink 2>/dev/null ; then
    greadlink "$@"
  else
    readlink "$@"
  fi
}
export -f readlink

# Call the original git-submodule-move with all arguments.
"$DOTFILES/vendor/com/github/iam-TJ/git-submodule-move/git-submodule-move" "$@"
